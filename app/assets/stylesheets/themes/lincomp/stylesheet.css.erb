/* Loads of button handling */

/* Paddings and widths on input and a href elements seem not to
   be calculated the same way, that's why we need to do the
   pixelly fiddling between those two buttons to make the fake
   button look more or less like the real one */
input.real_button, a.fake_button {
  border: 1px solid #999;
  /*font-weight: bold;*/
  color: #000;
  background: #fff;
  cursor: pointer;
  border-radius: 0.4em;
  -moz-border-radius: 0.4em;
  -webkit-border-radius: 0.4em;
  font-size: 10pt;
  text-align: center;



  /* Thanks: http://gradients.glrzad.com/ */

   background-image: linear-gradient(bottom, rgb(224,224,224) 21%, rgb(255,255,255) 72%, rgb(250,250,250) 84%);
   background-image: -o-linear-gradient(bottom, rgb(224,224,224) 21%, rgb(255,255,255) 72%, rgb(250,250,250) 84%);
   background-image: -moz-linear-gradient(bottom, rgb(224,224,224) 21%, rgb(255,255,255) 72%, rgb(250,250,250) 84%);
   background-image: -webkit-linear-gradient(bottom, rgb(224,224,224) 21%, rgb(255,255,255) 72%, rgb(250,250,250) 84%);
   background-image: -ms-linear-gradient(bottom, rgb(224,224,224) 21%, rgb(255,255,255) 72%, rgb(250,250,250) 84%);

   background-image: -webkit-gradient(
	linear,
	left bottom,
	left top,
	color-stop(0.21, rgb(224,224,224)),
	color-stop(0.72, rgb(255,255,255)),
	color-stop(0.84, rgb(250,250,250))
   );


}

a.fake_button {
  padding: 4px 6px 4px 6px;
}


