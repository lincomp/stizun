<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd"> 
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" > 
 
<head> 
 
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" /> 
  <title>ADMIN: Lincomp</title> 
  <%= stylesheet_link_tag "general" %>
  <%= stylesheet_link_tag "general_admin" %>

  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery.jstree/jquery.jstree.js" %>
  
  
  <%= #include_fancy_box 
  %>

 <script type="text/javascript" charset="utf-8">
        /*$(document).ready(function() {
          $("a.fancy").fancybox({
            'hideOnContentClick': false,
            'autoScale' : true,
            'width': 1000,
            'height':700,            
            'type' : 'iframe'
          });
        });*/
        
      $(document).ready(function() {
        var $dialog = $('<div></div>')
          .html('This dialog will show every time!')
          .dialog({
            autoOpen: false,
            title: 'Basic Dialog'
          });

        $('#opener').click(function() {
          $dialog.dialog('open');
          // prevent the default action, e.g., following a link
          return false;
        });
      });
        
        
    </script>

</head> 
 
<body>
  <%= render :partial => "shared/devheader" %>

  <div id="wrapper">


    <div id="header"> 
      <h1>Lincomp Admin</h1> 
    </div> 

    <div id="primarynav">
      <div class="admin-navigation">
      <ul>
        <li><%= link_to "Products", admin_products_path %></li>
        <li><%= link_to "Orders", admin_orders_path %></li>
        <li><%= link_to "Invoices", admin_invoices_path %></li>
        <li><%= link_to "Users", admin_users_path %></li>
        <li><%= link_to "Tax Classes", admin_tax_classes_path %></li>
        <li><%= link_to "System history", admin_histories_path %></li>
        <li><%= link_to "Suppliers", admin_suppliers_path %></li>
        <li><%= link_to "Accounts", admin_accounts_path %></li>
              <ul class="indent">
              <li><%= link_to "Journal Entries", admin_journal_entries_path %></li>
              <li><%= link_to "Manual transaction", new_admin_account_transaction_path %></li>

              </ul>

        <li><%= link_to "Payment methods", admin_payment_methods_path %></li>
        <li><%= link_to "Shipping rates", admin_shipping_rates_path %></li>
        <li><%= link_to "Configuration items", admin_configuration_items_path %></li>
        <li class="lastlink"></li>

      <ul>
      </div>
    </div>
  
    <div id="content"> 
      <% if flash[:notice] -%>
        <div id="notice" ><%= flash[:notice] %></div>
      <% end -%>
      <% if flash[:error] -%>
        <div id="error" ><%= flash[:error] %></div>
      <% end -%>

    <%= yield %>
    
   
    </div> 

    <div id="footer">
    &copy; 2010 Lincomp GmbH
    </div>
  </div>     
    
</body> 
</html> 
