  <tr class="<%= cycle('odd','even') %>">
    <td><%= product_line.id %></td>
    <td>
      

      <%= form_for [:admin, product_line] do |f| %>
        <%= f.check_box :is_available %> Available for sale <br>
        <%= f.check_box :direct_shipping %> Direct shipping <br>
        <%= f.submit 'Save' %>
      <% end %>

      <%= " <span class='danger'>[LOSS LEADER]</span><br>".html_safe if product_line.is_loss_leader? %>
      <%= " <span class='danger'>[UNPROFITABLE]</span><br>".html_safe if !product_line.profitable? %>
      <%= " <span class='danger'>[MISSING COMPONENTS]</span><br>".html_safe if product_line.has_unavailable_components? %>
      <%= " <span class='danger'>[MISSING SUPPLY ITEM]</span><br>".html_safe if product_line.has_unavailable_supply_item? %>

    </td>
    
    <td>
      <%= product_line.manufacturer %>
    </td>

    <td>
      <%= product_line.name %>
    </td>


    <td class="price">
      <table style="width: 250px">
        <tr>
          <td>Purchase price</td><td class="price"><%= sprintf "%.2f", product_line.purchase_price %></td>
        </tr>
        <tr>
          <td>Calculated margin</td><td class="price"><%= pretty_margin(product_line) %></td>
        </tr>

        <% if product_line.on_sale? %>
          <tr>
            <td>Gross price</td><td class="price"><%= pretty_price(product_line.gross_price) %></td>
          </tr>

          <tr>
            <td>Rebate</td><td class="price">./. <%= pretty_price(product_line.rebate) %></td>
          </tr>

          <tr>
            <td>Price</td><td class="price"><%= pretty_price(product_line.price) %></td>
          </tr>          
        <% end %>
        <tr>
          <td>Taxes</td><td class="price"><%= pretty_taxes(product_line) %></td>
        </tr>
        <tr>
          <td>Total</td><td class="price"><%= pretty_price( product_line.taxed_price ) %></td>
        </tr>
        <tr>
          <td>Rounded</td><td class="price"><%= pretty_price( product_line.taxed_price.rounded ) %></td>
        </tr>
      </table>
    
    </td>
    <td>
      <%= link_to "Edit", edit_admin_product_path(product_line), :class => 'fancybox' %>
      <%= link_to "Delete", admin_product_path(product_line), :confirm => 'Are you sure?', :method => 'delete' unless product_line.in_a_document?  %>
    </td>
  </tr>