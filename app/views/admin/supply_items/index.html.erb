<h1>Listing supply items</h1>
<h2><%= @supplier.name %></h2>



<% form_tag({:action => 'index'}, {:method => 'get'}) do %>
<p>Search for: <%= text_field :search, :keyword, :size => 15 %> <%= submit_tag 'Search' %>
<% end %>


<% unless params[:search].blank? %>
<p>Search results for: <%= params[:search][:keyword] %></p>
<% end %>


<%= will_paginate @supply_items %>

<table>
  <tr>
    <th>ID</th>
    <th>Code</th>
    <th>Name</th>
    <th>Purchase price</th>
    <th>Action</th>

  </tr>

<% @supply_items.each do |item| %>
  <tr class="<%= cycle('odd','even') %>">
    <td><%=h item.id %></td>
    <td><%=h item.supplier_product_code %></td>
    <td><%=h item.name %></td>
    <td class="price"><%= item.purchase_price %></td>
    <td>
      <%= link_to_box 'Create Product', create_from_supply_item_admin_products_path(:supply_item_id => item)%>
      <%= link_to_box 'Edit Product', edit_admin_product_path(item.product) unless item.product.nil? %>
    </td>

  </tr>
<% end %>
</table>

<%= will_paginate @supply_items %>

