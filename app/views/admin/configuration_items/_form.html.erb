<% form_for [:admin, @ci] do |f| %>

<table class="dataentry">

  <tr>
    <td><%= f.label :key, "Key" %></td>
    <td><%= f.text_field :key %></td>
  </tr>
  
  <tr>
    <td><%= f.label :value, "Value" %></td>
    <td><%= f.text_field :value %></td>
  </tr>
  
  <tr>
    <td><%= f.label :name, "Name" %></td>
    <td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <td><%= f.label :description, "Description" %></td>
    <td><%= f.text_field :description %></td>
  </tr>

</table>
<%= f.submit 'Go' %>
<% end %>