<h1>Listing users</h1>

<%= form_tag({}, {:method => 'get'}) do %>
  <p>
   Email: 
   <%= text_field :search, :email, :size => 15, :value => (@email || "") %>
   Firstname: 
   <%= text_field :search, :firstname, :size => 15, :value => (@firstname || "")  %>
   Lastname: 
   <%= text_field :search, :lastname, :size => 15, :value => (@lastname || "")  %>
   Company: 
   <%= text_field :search, :company, :size => 15, :value => (@company || "") %>

<%= submit_tag 'Search' %>
  </p>
<% end %>

<%= will_paginate @users %>

<table>
  <tr>
  <th>ID</th>
  <th>Login/E-Mail</th>
  </tr>

<% @users.each do |u| %>
  <tr>
    <td><%= u.id %></td>
    <td><%= u.email %></td>
    <td><%= link_to "Edit", edit_admin_user_path(u), :class => 'fancybox' %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @users %>
