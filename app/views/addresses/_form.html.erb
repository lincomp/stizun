  <%= form.error_messages %>
  
  <table class="address">
    <tr>
      <td><%= form.label :company,  t('stizun.address.attributes.company') %> </td>
      <td><%= form.text_field :company, :size => 45 %></td>
    </tr>
    <tr>
      <td>
        <%= form.label :firstname, t('stizun.address.attributes.firstname') %>/<%= form.label :lastname, t('stizun.address.attributes.lastname') %>
      </td>
      <td><%= form.text_field :firstname, :size => 18 %> <%= form.text_field :lastname, :size => 18 %></td>
    </tr>
    <tr>
      <td><%= form.label :email, t('stizun.address.attributes.email') %> </td>
      <td><%= form.text_field :email %></td>
    </tr>
    <tr>
      <td><%= form.label :street, t('stizun.address.attributes.street') %> </td>
      <td><%= form.text_field :street %></td>
    </tr>
    <tr>
      <td>
        <%= form.label :postalcode, t('stizun.address.attributes.postalcode') %>/<%= form.label :city, t('stizun.address.attributes.city') %>
      </td>
      <td><%= form.text_field :postalcode, :size => 6 %><%= form.text_field :city, :size => 20 %></td>
    </tr>
    <tr>
      <td><%= form.label :country_id, t('stizun.address.attributes.country') %> </td>
      <td><%= form.collection_select(:country_id, Country.all, :id, :name) %></td>
    </tr>
  </table>
