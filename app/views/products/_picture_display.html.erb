<% if product_pictures.empty? %>
  <div class="no_picture">
  <%= t('stizun.product.no_picture') %>
  </div>
<% else %>
  <div class="main_picture">
    <% if product_pictures.main.empty? %>
      <%= image_tag(product_pictures.first.file.url(:medium)) %>    
    <% else %>
      <%= link_to image_tag(product_pictures.main.first.file.url(:medium)), product_pictures.main.first.file.url(:large), {:rel => 'lightbox[gallery]', :title => "#{@product.to_s}"} %>
    <% end %>
  </div>
  
  <% (product_pictures - product_pictures.main)[0..3].each do |pp| %>
  
    <div class="thumb">
    <%= link_to image_tag(pp.file.url(:thumb), :style => 'float: left'), pp.file.url(:large), {:rel => 'lightbox[gallery]', :title => "#{@product.to_s}"} %>
    </div>
  <% end %>
  <div style="clear: both"></div>
<% end %>
